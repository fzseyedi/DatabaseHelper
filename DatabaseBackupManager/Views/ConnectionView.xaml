<UserControl x:Class="DatabaseBackupManager.Views.ConnectionView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:DatabaseBackupManager.Views"
xmlns:models="clr-namespace:DatabaseBackupManager.Models"
xmlns:sys="clr-namespace:System;assembly=mscorlib"
mc:Ignorable="d" 
d:DesignHeight="500" 
d:DesignWidth="600"
Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="AuthenticationTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:AuthenticationType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="تنظیمات سرور" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Connection Form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Connection Settings -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="تنظیمات سرور" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>

                    <!-- Server Name -->
                    <TextBlock Text="نام سرور:" Margin="0,0,0,5"/>
                    <TextBox x:Name="ServerNameTextBox"
                             Text="{Binding ConnectionSettings.ServerName, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Margin="0,0,0,15" 
                             FlowDirection="LeftToRight"/>

                    <!-- Authentication Type -->
                    <TextBlock Text="نوع احراز هویت:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource AuthenticationTypes}}"
                              SelectedItem="{Binding ConnectionSettings.AuthenticationType}"
                              Padding="8"
                              Margin="0,0,0,15"/>

                    <!-- SQL Server Credentials (visible only for SQL Authentication) -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ConnectionSettings.AuthenticationType}" 
                                                 Value="{x:Static models:AuthenticationType.SqlServer}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="نام کاربری:" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ConnectionSettings.Username, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" 
                                 Margin="0,0,0,15" FlowDirection="LeftToRight"/>

                        <TextBlock Text="رمز عبور:" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Padding="8" 
                                     Margin="0,0,0,15"
                                     PasswordChanged="PasswordBox_PasswordChanged" FlowDirection="LeftToRight"/>
                    </StackPanel>

                    <!-- Connection Timeout -->
                    <TextBlock Text="زمان تایم اوت اتصال (ثانیه):" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ConnectionSettings.ConnectionTimeout, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Margin="0,0,0,15"/>

                    <!-- Trust Server Certificate -->
                    <CheckBox Content="اعتماد به گواهی سرور" 
                              IsChecked="{Binding ConnectionSettings.TrustServerCertificate}"
                              Margin="0,0,0,10"/>

                    <!-- Remember Settings -->
                    <CheckBox Content="به خاطر سپردن تنظیمات برای دفعه بعد" 
                              IsChecked="{Binding RememberSettings}"
                              Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal">
                        <Button Content="آزمایش اتصال" 
                                Command="{Binding TestConnectionCommand}"
                                Padding="15,8"
                                Margin="0,0,10,0"
                                Background="#FF9B59B6"
                                Foreground="White"
                                BorderThickness="0"/>

                        <Button Content="اتصال" 
                                Command="{Binding ConnectCommand}"
                                Padding="15,8"
                                Margin="0,0,10,0"
                                Background="#FF27AE60"
                                Foreground="White"
                                BorderThickness="0"/>

                        <Button Content="قطع ارتباط" 
                                Command="{Binding DisconnectCommand}"
                                Padding="15,8"
                                Margin="0,0,10,0"
                                Background="#FFE74C3C"
                                Foreground="White"
                                BorderThickness="0"/>

                        <Button Content="حذف تنظیمات" 
                                Command="{Binding ClearSettingsCommand}"
                                Padding="15,8"
                                Background="#FF95A5A6"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>

                    <!-- Connection Status -->
                    <Border Background="#FFECF0F1" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="0,20,0,0" FlowDirection="LeftToRight">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Margin="0,0,10,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#FFE74C3C"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                <Setter Property="Fill" Value="#FF27AE60"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Loading Indicator -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}">
                        <TextBlock Text="? " FontSize="14"/>
                        <TextBlock Text="لطفا صبر کنید..." FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Database List -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="بانکهای اطلاعاتی" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>


                    <Button Grid.Row="1"
                            Command="{Binding RefreshDatabasesCommand}"
                            HorizontalAlignment="Left"
                            Padding="10,5"
                            Margin="0,0,0,10"
                            Background="#FF3498DB"
                            Foreground="White"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="بارگذاری مجدد" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding Databases}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="1"
                              BorderBrush="#FFBDC3C7">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="نام" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="حجم" Binding="{Binding SizeFormatted}" Width="80"/>
                            <DataGridTextColumn Header="وضعیت" Binding="{Binding Status}" Width="80"/>
                            <DataGridTextColumn Header="آخرین پشتیبان" Binding="{Binding LastBackupDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="130"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

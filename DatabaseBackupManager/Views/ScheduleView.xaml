<UserControl x:Class="DatabaseBackupManager.Views.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseBackupManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Backup Schedules" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            <Button Content="➕ New Schedule" 
                    Command="{Binding AddScheduleCommand}"
                    Padding="15,8"
                    Margin="20,0,0,0"
                    Background="#FF27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Schedule List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Scheduled Backups" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>

                    <!-- Schedules DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Schedules}"
                              SelectedItem="{Binding SelectedSchedule}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="1"
                              BorderBrush="#FFBDC3C7">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Enabled" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="12" Height="12" HorizontalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#FFE74C3C"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                                            <Setter Property="Fill" Value="#FF27AE60"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Database" Binding="{Binding DatabaseName}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding BackupType}" Width="80"/>
                            <DataGridTextColumn Header="Frequency" Binding="{Binding Frequency}" Width="80"/>
                            <DataGridTextColumn Header="Next Run" Binding="{Binding NextRunDate, StringFormat={}{0:MM/dd HH:mm}}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                Margin="0,15,0,0">
                        <Button Content="✏️ Edit" 
                                Command="{Binding EditScheduleCommand}"
                                Padding="12,8"
                                Margin="0,0,10,0"
                                Background="#FF3498DB"
                                Foreground="White"
                                BorderThickness="0"/>
                        <Button Content="🗑️ Delete" 
                                Command="{Binding DeleteScheduleCommand}"
                                Padding="12,8"
                                Margin="0,0,10,0"
                                Background="#FFE74C3C"
                                Foreground="White"
                                BorderThickness="0"/>
                        <Button Content="⏯️ Toggle" 
                                Command="{Binding ToggleScheduleCommand}"
                                Padding="12,8"
                                Margin="0,0,10,0"
                                Background="#FF9B59B6"
                                Foreground="White"
                                BorderThickness="0"/>
                        <Button Content="▶ Run Now" 
                                Command="{Binding RunNowCommand}"
                                Padding="12,8"
                                Background="#FF27AE60"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Schedule Editor -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Schedule Details"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                            <Setter Property="Text" Value="Edit Schedule"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Editor Form (visible when editing) -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisConverter}}">
                            <!-- Schedule Name -->
                            <TextBlock Text="Schedule Name:" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditingSchedule.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8"
                                     Margin="0,0,0,10"/>

                            <!-- Database -->
                            <TextBlock Text="Database:" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Databases}"
                                      SelectedItem="{Binding SelectedDatabase}"
                                      DisplayMemberPath="Name"
                                      Padding="8"
                                      Margin="0,0,0,10"/>

                            <!-- Backup Type -->
                            <TextBlock Text="Backup Type:" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding BackupTypes}"
                                      SelectedItem="{Binding EditingSchedule.BackupType}"
                                      Padding="8"
                                      Margin="0,0,0,10"/>

                            <!-- Frequency -->
                            <TextBlock Text="Frequency:" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Frequencies}"
                                      SelectedItem="{Binding EditingSchedule.Frequency}"
                                      Padding="8"
                                      Margin="0,0,0,10"/>

                            <!-- Day of Week (for Weekly) -->
                            <StackPanel Margin="0,0,0,10">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EditingSchedule.Frequency}" Value="Weekly">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="Day of Week:" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding DaysOfWeek}"
                                          SelectedItem="{Binding EditingSchedule.DayOfWeek}"
                                          Padding="8"/>
                            </StackPanel>

                            <!-- Day of Month (for Monthly) -->
                            <StackPanel Margin="0,0,0,10">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EditingSchedule.Frequency}" Value="Monthly">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="Day of Month:" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding DaysOfMonth}"
                                          SelectedItem="{Binding EditingSchedule.DayOfMonth}"
                                          Padding="8"/>
                            </StackPanel>

                            <!-- Scheduled Time -->
                            <TextBlock Text="Time (HH:mm):" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditingSchedule.ScheduledTime, StringFormat=hh\\:mm}" 
                                     Padding="8"
                                     Margin="0,0,0,10"/>

                            <!-- Backup Path -->
                            <TextBlock Text="Backup Path:" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" 
                                         Text="{Binding EditingSchedule.BackupPath, UpdateSourceTrigger=PropertyChanged}" 
                                         Padding="8"/>
                                <Button Grid.Column="1" 
                                        Content="📁" 
                                        Command="{Binding BrowseBackupPathCommand}"
                                        Padding="10,8"
                                        Margin="5,0,0,0"
                                        Background="#FF3498DB"
                                        Foreground="White"
                                        BorderThickness="0"/>
                            </Grid>

                            <!-- Compress Backup -->
                            <CheckBox Content="Compress Backup" 
                                      IsChecked="{Binding EditingSchedule.CompressBackup}"
                                      Margin="0,0,0,10"/>

                            <!-- Retention Days -->
                            <TextBlock Text="Retention Days:" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditingSchedule.RetentionDays, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8"
                                     Margin="0,0,0,15"/>

                            <!-- Editor Buttons -->
                            <StackPanel Orientation="Horizontal">
                                <Button Content="💾 Save" 
                                        Command="{Binding SaveScheduleCommand}"
                                        Padding="15,8"
                                        Margin="0,0,10,0"
                                        Background="#FF27AE60"
                                        Foreground="White"
                                        BorderThickness="0"/>
                                <Button Content="❌ Cancel" 
                                        Command="{Binding CancelEditCommand}"
                                        Padding="15,8"
                                        Background="#FF95A5A6"
                                        Foreground="White"
                                        BorderThickness="0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Placeholder when not editing -->
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Border Background="#FFECF0F1" 
                                    CornerRadius="5" 
                                    Padding="20">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="📅" 
                                               FontSize="48" 
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Select a schedule to view details" 
                                               HorizontalAlignment="Center"
                                               Foreground="#FF7F8C8D"/>
                                    <TextBlock Text="or click 'New Schedule' to create one" 
                                               HorizontalAlignment="Center"
                                               Foreground="#FF7F8C8D"/>
                                </StackPanel>
                            </Border>

                            <!-- Selected Schedule Details -->
                            <Border Background="#FFF8F9FA" 
                                    CornerRadius="5" 
                                    Padding="15"
                                    Margin="0,15,0,0"
                                    Visibility="{Binding SelectedSchedule, Converter={StaticResource BoolToVisConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Selected Schedule" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedSchedule.Name}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Database:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedSchedule.DatabaseName}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Run:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedSchedule.LastRunDate, StringFormat={}{0:yyyy-MM-dd HH:mm}, TargetNullValue='Never'}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Next Run:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedSchedule.NextRunDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Path:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedSchedule.BackupPath}" TextWrapping="Wrap"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>

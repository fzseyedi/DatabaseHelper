<UserControl x:Class="DatabaseBackupManager.Views.RestoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseBackupManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="700">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Database Restore" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Restore Settings -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Restore Settings" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <!-- Backup File Selection -->
                        <TextBlock Text="Backup File:" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" 
                                     Text="{Binding BackupFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8"/>
                            <Button Grid.Column="1" 
                                    Content="📁" 
                                    Command="{Binding BrowseBackupFileCommand}"
                                    Padding="10,8"
                                    Margin="5,0,0,0"
                                    Background="#FF3498DB"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </Grid>

                        <!-- Load Backup Info Button -->
                        <Button Content="🔍 Load Backup Info" 
                                Command="{Binding LoadBackupInfoCommand}"
                                HorizontalAlignment="Left"
                                Padding="10,5"
                                Margin="0,0,0,15"
                                Background="#FF9B59B6"
                                Foreground="White"
                                BorderThickness="0"/>

                        <!-- Target Database Name -->
                        <TextBlock Text="Target Database Name:" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding TargetDatabaseName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8"
                                 Margin="0,0,0,15"/>

                        <!-- Optional: Custom Data File Path -->
                        <Expander Header="Advanced Options" Margin="0,0,0,15">
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="Data File Path (.mdf):" Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" 
                                             Text="{Binding DataFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="8"/>
                                    <Button Grid.Column="1" 
                                            Content="📁" 
                                            Command="{Binding BrowseDataFilePathCommand}"
                                            Padding="10,8"
                                            Margin="5,0,0,0"
                                            Background="#FF95A5A6"
                                            Foreground="White"
                                            BorderThickness="0"/>
                                </Grid>

                                <TextBlock Text="Log File Path (.ldf):" Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" 
                                             Text="{Binding LogFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="8"/>
                                    <Button Grid.Column="1" 
                                            Content="📁" 
                                            Command="{Binding BrowseLogFilePathCommand}"
                                            Padding="10,8"
                                            Margin="5,0,0,0"
                                            Background="#FF95A5A6"
                                            Foreground="White"
                                            BorderThickness="0"/>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="▶ Start Restore" 
                                    Command="{Binding RestoreCommand}"
                                    Padding="15,10"
                                    Margin="0,0,10,0"
                                    Background="#FF27AE60"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"/>
                            
                            <Button Content="⏹ Cancel" 
                                    Command="{Binding CancelRestoreCommand}"
                                    Padding="15,10"
                                    Background="#FFE74C3C"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </StackPanel>

                        <!-- Progress Section -->
                        <StackPanel Margin="0,20,0,0" 
                                    Visibility="{Binding IsRestoreInProgress, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="Restore Progress:" Margin="0,0,0,5"/>
                            <ProgressBar Value="{Binding Progress}" 
                                         Minimum="0" 
                                         Maximum="100" 
                                         Height="25"
                                         Foreground="#FF3498DB"/>
                            <TextBlock Text="{Binding Progress, StringFormat={}{0}%}" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,5,0,0"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Backup File Info Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Backup File Contents" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>

                    <!-- Backup File List -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding BackupFileList}"
                              SelectedItem="{Binding SelectedBackupFile}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="1"
                              BorderBrush="#FFBDC3C7">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Logical Name" Binding="{Binding LogicalName}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="60"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding SizeInBytes, StringFormat={}{0:N0} bytes}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Warning Message -->
                    <Border Grid.Row="2" 
                            Background="#FFFDF2E9" 
                            CornerRadius="5" 
                            Padding="15"
                            Margin="0,15,0,0"
                            BorderBrush="#FFE67E22"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="⚠️ Warning" 
                                       FontWeight="SemiBold" 
                                       Foreground="#FFE67E22"
                                       Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" 
                                       FontSize="12"
                                       Foreground="#FF7F8C8D">
                                Restoring a database will overwrite any existing database with the same name. 
                                Make sure you have a backup of the current data if needed.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
